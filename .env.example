# Reddit Deleted Comment Dataset Processing - Environment Variables
# Copy this file to .env and fill in your values

# Google Drive API Configuration
GOOGLE_DRIVE_CREDENTIALS_PATH=./credentials.json
GOOGLE_DRIVE_TOKEN_PATH=./token.json
GOOGLE_DRIVE_FOLDER_ID=

# Data Source Configuration (REQUIRED)
REDDIT_DATA_URL=https://academictorrents.com/download/your-reddit-dataset-hash.torrent
DOWNLOAD_PATH=./data/raw
EXTRACT_PATH=./data/extracted

# Storage Configuration
OUTPUT_DIR=./data/processed
TEMP_DIR=./data/temp

# Processing Configuration
CHUNK_SIZE=100000
MAX_WORKERS=4
MEMORY_LIMIT_GB=8

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=./logs/processing.log

# Resource Management
DISK_SPACE_THRESHOLD_GB=5
MAX_FILE_SIZE_GB=2

# Development Settings (optional)
DEBUG_MODE=false
SAMPLE_SIZE=0